<h2><%= t("admin.category_list") %></h2>
<div class="group pull-right" style="padding-bottom: 20px;">
  <%= link_to(t("admin.New category"), new_admin_category_path, class: "btn btn-primary btn-sm") %>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <td>#</td>
      <td>类别</td>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td>#</td>
        <td><%= category.name %></td>
        <td>
            <%= link_to("Edit", edit_admin_category_path(category), class: "btn btn-sm btn-default")%>
            <%= link_to("Delete", admin_category_path(category),    class: "btn btn-sm btn-default",
                        method: :delete, data: { confirm: "Are you sure?" } )%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
