<div class="container-fluid" id="products">
  <div class="row">
    <div class="col-md-10 col-md-offset-1 col-xs-10">
      <div class="filter">
        <div class="btn-group btn-group-lg" role="group" aria-label="order">
          <button type="button" class="btn btn-warning">
            <%= link_to(content_tag(:i, '价格', class: 'fa fa-arrow-down'), products_path(:order => "by_product_price")) %>
          </button>
          <button type="button" class="btn btn-warning">
            <%= link_to(content_tag(:i, '上架时间', class: 'fa fa-arrow-down'), products_path(:order => "by_product_created")) %>
          </button>
          <button type="button" class="btn btn-warning">
            <%= link_to(content_tag(:i, '点赞数量', class: 'fa fa-arrow-down'), products_path(:order => "by_liked_user")) %>
          </button>
        </div>
      </div>




     <% #轮番图 %>
      <div id="myCarousel" class="carousel slide">
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
       </ol>
       <div class="carousel-inner">
          <div class="item active">
           <a href="javascript:;">
            <img src="https://images-cn.ssl-images-amazon.com/images/G/28/cnbooks/event/2017JuneB150G50/xq-170531-1500300-book1._CB509456109_.jpg"">
            <div class="carousel-caption"></div>
           </a>
          </div>
          <div class="item">
           <a href="javascript:;">
            <img src="https://images-cn.ssl-images-amazon.com/images/G/28/img13_audit/bmvd/zzhangli/suqin_tcg._CB508831157_.jpg"">
            <div class="carousel-caption"></div>
           </a>
          </div>
          <div class="item">
           <a href="javascript:;">
            <img src="https://images-cn.ssl-images-amazon.com/images/G/28/shiying/2017-99gift/qxl_20170419_1500300_books._CB529239326_.jpg"">
            <div class="carousel-caption"></div>
           </a>
          </div>
        </div>
      </div>


    


      <% @products.each do |product| %>
        <div class="col-xs-6 col-md-3">
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail product-image") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
          <span class="price">￥ <%= product.price %></span>
          <span class="like"><%= link_to(content_tag(:i , product.liked_users.count, class: 'fa fa-thumbs-up'), "#") %></span>

          <% if !product.users.include?(current_user) %>
            <%= link_to add_to_favorite_product_path(product),method: :post do %>
              <i class="fa fa-heart"></i>
            <% end %>
          <% else %>
            <%= link_to quit_favorite_product_path(product), method: :post do %>
              <i class="fa fa-heart", style="color: red"></i>
            <% end %>
          <% end %>
         </div>
      <% end %>
    </div>
  </div>
</div>
